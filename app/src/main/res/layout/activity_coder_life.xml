<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CoderLife">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_me"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        app:cardElevation="45dp"
        android:backgroundTint="#2196F3"
        app:cardCornerRadius="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Self Love"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="italic|bold" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:weightSum="6">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_weight="4"
                android:layout_height="150dp"
                android:src="@drawable/me2"
                app:civ_border_width="4dp"
                app:civ_border_color="#FFC107"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Chehre pe Cheese Wali Smile"
                    android:textSize="15sp" />
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="120dp"
            android:weightSum="6">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_weight="4"
                android:layout_height="150dp"
                android:src="@drawable/me3"
                app:civ_border_width="4dp"
                app:civ_border_color="#3F51B5"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logic Thinker-Aur Batao?"
                    android:textSize="15sp" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:weightSum="6">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_weight="4"
                android:layout_height="150dp"
                android:src="@drawable/college"
                app:civ_border_width="4dp"
                app:civ_border_color="#4CAF50"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Enjoying College Life"
                    android:textSize="15sp" />
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="120dp"
            android:weightSum="6">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_weight="4"
                android:layout_height="150dp"
                android:src="@drawable/me5"
                app:civ_border_width="4dp"
                app:civ_border_color="#2196F3"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="After Developing an App"
                    android:textSize="15sp" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:weightSum="6">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_weight="4"
                android:layout_height="150dp"
                android:src="@drawable/bhole_bhagat"
                app:civ_border_width="4dp"
                app:civ_border_color="#FF5722"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="BholeNath Bhakt - OM NAMAHA SHIVAAY"
                    android:textSize="15sp" />
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="120dp"
            android:weightSum="6">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_weight="4"
                android:layout_height="150dp"
                android:src="@drawable/cutie"
                app:civ_border_width="4dp"
                app:civ_border_color="#E91E63"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cuties-Masum Bnane Kis Koshish"
                    android:textSize="15sp" />
            </ScrollView>
        </LinearLayout>
</LinearLayout>
</LinearLayout>